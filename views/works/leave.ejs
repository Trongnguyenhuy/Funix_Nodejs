<%- include('../includes/head.ejs') %>
<%- include('../includes/navigation.ejs') %>
    <div class="container-fluid">
        <div class="row">
            <div class="col-6 offset-3 mt-3">
                <div class="card  border-info text-info mb-3">
                    <div class="card-header row">
                        <div class="col-sm-3">
                            <img class="card-img-top" src="/<%= workerImg %>" alt="<%= workerName %>">
                        </div>
                        <div class="col-sm-9">
                            <h2><%= workerName %> </h2>
                            <p><b>Remain Annual Leave:</b> <%= annualLeave %> Day </p>
                        </div>
                    </div>
                    <div class="card-body">
                        <%if(message) { %>
                            <div class="alert alert-danger" role="alert">
                                <p><%= message %></p>
                            </div>
                        <% } %>
                        <form action="/leave/<%= workerId %>" method="post">
                            <div class="form-group row">
                                <div class="col-sm-9">
                                    <label for="startDay">Start Day:</label>
                                    <input class="form-control" type="date" name="startDay" id="startDay"/>
                                </div>
                                <div class="col-sm-3">
                                    <label for="hoursLeave1">Rest time:</label>
                                    <select class="form-control" name="hoursLeave1" id="hoursLeave1">
                                        <option value="8">8</option>
                                        <option value="7">7</option>
                                        <option value="6">6</option>
                                        <option value="5">5</option>
                                        <option value="4">4</option>
                                        <option value="3">3</option>
                                        <option value="2">2</option>
                                        <option value="1">1</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-9">
                                    <label for="endDay">End Day:</label>
                                    <input class="form-control" type="date" name="endDay" id="endDay"/>
                                </div>
                                <div class="col-sm-3">
                                    <label for="hoursLeave2">Rest time:</label>
                                    <select class="form-control" name="hoursLeave2" id="hoursLeave2">
                                        <option value="8">8</option>
                                        <option value="7">7</option>
                                        <option value="6">6</option>
                                        <option value="5">5</option>
                                        <option value="4">4</option>
                                        <option value="3">3</option>
                                        <option value="2">2</option>
                                        <option value="1">1</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="reason">Reason:</label>
                                <textarea class="form-control" rows="5" name="reason" id="reason"></textarea>
                            </div>
                            <div class="btn-group btn-group-lg" role="group" aria-label="Basic example">
                                <button type="submit" class="btn btn-success" <%= disabled ? 'disabled': ''%>>Submit</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
<%- include('../includes/end.ejs') %>