<%- include('../includes/head.ejs') %>
<%- include('../includes/navigation.ejs') %>
    <div class="container-fluid">
        <div class="row">
            <div class="col-6 offset-3 mt-3">
                <div class="card  border-info text-info mb-3">
                    <div class="card-header row">
                        <div class="col-sm-3">
                            <img class="card-img-top" src="/<%= user.imgUrl %>" alt="<%= user.name %>">
                        </div>
                        <div class="col-sm-9">
                            <h2><%= user.name %> </h2>
                            <p><i class="fa fa-id-card" aria-hidden="true"></i> Admin: <%= user._id %> </p>
                        </div>
                    </div>
                    <div class="card-body">
                        <form action="/admin/add-user" method="post" enctype="multipart/form-data">
                            <div class="form-group">
                                <label for="employee">Employee Name:</label>
                                <input class="form-control" type="text" name="employee" id="employee"/>
                            </div>
                            <div class="form-group">
                                <label for="doB">Day Of Birth:</label>
                                <input class="form-control" type="date" name="doB" id="doB"/>
                            </div>
                            <div class="form-group">
                                <label for="salaryScale">Salary Scale:</label>
                                <input class="form-control" type="number" name="salaryScale" id="salaryScale" step="0.01"/>
                            </div>
                            <div class="form-group">
                                <label for="department">Department:</label>
                                <input class="form-control" type="text" name="department" id="department"/>
                            </div>
                            <div class="form-group">
                                <label for="annualLeave">Annual Leave:</label>
                                <input class="form-control" type="number" name="annualLeave" id="annualLeave"/>
                            </div>
                            <div class="form-group">
                                <label for="image">Img:</label>
                                <input class="form-control" type="file" name="image" id="image"/>
                            </div>
                            <div class="btn-group btn-group-lg" role="group" aria-label="Basic example">
                                <button type="submit" class="btn btn-success">Submit</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
<%- include('../includes/end.ejs') %>